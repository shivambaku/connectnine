generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

model GameState {
  id                    String        @id @default(uuid())
  startedAt             DateTime      @default(now())
  boardPieces           Int[]
  selectorPieces        Int[]
  futureSelectorPieces  Int[]
  selectedIndex         Int           @default(0)
  score                 Int           @default(0)
  canUndo               Boolean       @default(false)
  previousState         String?
}